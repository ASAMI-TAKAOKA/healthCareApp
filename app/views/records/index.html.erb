<h1>健康状態</h1>
<div class="user_nav grid-6">
  <a class="graph" href="/records/new">健康状態を記録する</a>
</div>
<%= line_chart [['2022-05-01',60 ], ['2022-06-01', 50], ['2022-07-01', 40]] %>
<br>

<div class="contents row">
  <% @records.each do |record| %>
    <div class="content_record" >
      <p>活動量：<%= record.activity %></p>
      <p>気分：<%= record.feeling %></p>
      <p>体調：<%= record.condition %></p>
      <p>食欲：<%= record.appetite %></p>
      <%= link_to '削除', "/records/#{record.id}", method: :delete %>
    </div>
  <% end %>
</div>